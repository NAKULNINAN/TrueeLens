# Media Forensics App Configuration
# Copy this file to .env and modify values as needed

# ===== DETECTION THRESHOLDS =====
CONFIDENCE_THRESHOLD=0.5
AI_IMAGE_THRESHOLD=0.6
DEEPFAKE_THRESHOLD=0.7
DUPLICATE_THRESHOLD=0.8

# ===== UI PREFERENCES =====
ENABLE_VISUALIZATION=True
SAVE_RESULTS=False
ENABLE_WEBCAM=True
UI_THEME=light
SHOW_TECHNICAL_DETAILS=True

# ===== MODEL PATHS =====
MODEL_BASE_DIR=models
XCEPTION_MODEL_PATH=models/xception_net.pth
MESO_MODEL_PATH=models/meso_net.pth
EFFICIENTNET_MODEL_PATH=models/efficientnet_b0.pth
MTCNN_MODEL_PATH=models/mtcnn

# ===== FILE STORAGE PATHS =====
PREFERENCES_STORAGE_PATH=user_preferences.json
REPORTS_OUTPUT_DIR=reports
TEMP_UPLOAD_DIR=temp_uploads
DATABASE_PATH=forensics_database.db

# ===== PROCESSING CONFIGURATION =====
MAX_FILE_SIZE_MB=100
MAX_VIDEO_DURATION_SECONDS=300
BATCH_SIZE=32
IMAGE_RESIZE_DIMENSIONS=224,224
VIDEO_FRAME_SAMPLE_RATE=30

# ===== SECURITY CONFIGURATION =====
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,bmp,tiff,webp
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,wmv,flv

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE_PATH=forensics_app.log
ENABLE_DEBUG_LOGGING=False

# ===== ADVANCED FEATURES =====
ENABLE_GPU_ACCELERATION=True
MAX_CONCURRENT_PROCESSES=4
CACHE_MODEL_PREDICTIONS=True
AUTO_BACKUP_PREFERENCES=True

# ===== API CONFIGURATION =====
# Uncomment and set if using external APIs
# GOOGLE_VISION_API_KEY=your_api_key_here
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ===== DEVELOPMENT SETTINGS =====
DEBUG_MODE=False
DEVELOPMENT_MODE=False
ENABLE_PROFILING=False
